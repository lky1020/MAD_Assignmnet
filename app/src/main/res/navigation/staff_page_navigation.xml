<?xml version="1.0" encoding="utf-8"?>

<!-- declared the fragment page for each menu item -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/staff_navigation"
app:startDestination="@+id/nav_home_staff">

    <!-- follow the menu id & assign the layout to them -->
    <fragment
        android:id="@+id/nav_home_staff"
        android:name="com.example.mad_assignment.Staff.Staff_Fragments.StaffHomeFragment"
        android:label="@string/hotel_name"
        tools:layout="@layout/staff_fragment_home" />

    <fragment
        android:id="@+id/nav_report"
        android:name="com.example.mad_assignment.Staff_Fragments.manager_report.ManagerReportFragment"
        android:label="Report"
        tools:layout="@layout/staff_fragment_report" />

    <fragment
        android:id="@+id/nav_TransHis_staff"
        android:name="com.example.mad_assignment.Staff_Fragments.staff_trans_history.StaffTransHistoryFragment"
        android:label="Transaction History"
        tools:layout="@layout/staff_fragment_trans_history" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.mad_assignment.Cust_Staff_Shared.Cust_Staff_Fragments.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />

    <!--- will be change to direct logout -->
    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.mad_assignment.Cust_Staff_Shared.Cust_Staff_Fragments.LogoutFragment"
        />
</navigation>