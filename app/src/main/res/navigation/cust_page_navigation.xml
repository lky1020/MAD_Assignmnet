<?xml version="1.0" encoding="utf-8"?>
<!-- declared the fragment page for each menu item -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cust_navigation"
    app:startDestination="@+id/nav_home_cust">

    <!-- follow the menu id & assign the layout to them, the android:name element is the kotlin file -->
    <fragment
        android:id="@+id/nav_home_cust"
        android:name="com.example.mad_assignment.Customer_Fragments.cust_home.CustHomeFragment"
        android:label="@string/hotel_name"
        tools:layout="@layout/customer_fragment_home" />

    <fragment
        android:id="@+id/nav_facility"
        android:name="com.example.mad_assignment.Customer_Fragments.cust_facilities.CustFacilitiesFragment"
        android:label="Book Facilities"
        tools:layout="@layout/customer_fragment_facilities" />

    <fragment
        android:id="@+id/nav_housekeeping"
        android:name="com.example.mad_assignment.Customer_Fragments.cust_housekeeping.CustHousekeepingFragment"
        android:label="Book Facilities"
        tools:layout="@layout/customer_fragment_housekeeping" />

    <fragment
        android:id="@+id/nav_TransHis_cust"
        android:name="com.example.mad_assignment.Customer_Fragments.cust_trans_history.CustTransHistoryFragment"
        android:label="Transaction History"
        tools:layout="@layout/customer_fragment_trans_history" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.mad_assignment.Customer.Cust_Staff_Fragments.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!--- will be change to direct logout -->
    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.mad_assignment.Customer.Cust_Staff_Fragments.logout.LogoutFragment"
        android:label="FAKE LOGOUT"
        tools:layout="@layout/fragment_logout" />
</navigation>