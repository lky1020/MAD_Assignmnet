<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/purchaserow"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/imgView_purchase_icon_trans_his"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/cimb"
        android:backgroundTint="@color/gray_white"
        android:src="@drawable/receiptsuccessful"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_purchase_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgView_purchase_icon_trans_his"
        app:layout_constraintTop_toTopOf="@+id/imgView_purchase_icon_trans_his"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Purchase" />

    <TextView
        android:id="@+id/tv_purchase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="@+id/imgView_purchase_icon_trans_his"
        app:layout_constraintStart_toStartOf="@+id/tv_purchase_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_purchase_text" />

    <TextView
        android:id="@+id/tv_purchase_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="-239.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_purchase_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toEndOf="@+id/tv_purchase_text"
        app:layout_constraintTop_toTopOf="@+id/tv_purchase_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_purchase_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success"
        app:layout_constraintBottom_toBottomOf="@+id/tv_purchase_date"
        app:layout_constraintEnd_toEndOf="@+id/tv_purchase_cost"
        app:layout_constraintStart_toStartOf="@+id/tv_purchase_cost"
        app:layout_constraintTop_toTopOf="@+id/tv_purchase_date" />

</androidx.constraintlayout.widget.ConstraintLayout>