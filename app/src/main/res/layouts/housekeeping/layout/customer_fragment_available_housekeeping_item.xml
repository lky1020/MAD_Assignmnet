<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_available_housekeeping_services"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.Customer_Fragments.cust_housekeeping.Services.Item.CustHousekeepingAvailableItemFragment">

    <EditText
        android:id="@+id/et_housekeeping_item_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="@color/teal_200"
        android:drawablePadding="5dp"
        android:padding="15dp"
        android:hint="@string/search_here"
        android:inputType="text"
        android:background="@drawable/custom_search_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="m"
        android:importantForAutofill="no" />

    <View
        android:id="@+id/ver_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/et_housekeeping_item_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_houseKeeping_item_available"
        android:text="@string/available"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ver_line1"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/hor_line1"
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:background="@color/gray"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/ver_line1"
        app:layout_constraintStart_toEndOf="@id/tv_houseKeeping_item_available" />

    <TextView
        android:id="@+id/tv_houseKeeping_item_ordered"
        android:text="@string/ordered"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/ver_line1"
        app:layout_constraintStart_toEndOf="@id/hor_line1"/>

    <View
        android:id="@+id/ver_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/hor_line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/framel_Housekeeping_Item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ver_line2"
        android:paddingBottom="?attr/actionBarSize"/>

</androidx.constraintlayout.widget.ConstraintLayout>