<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff.room.ManageRoomMenu"
    android:orientation="vertical">

    <!-- the upper app bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutRoomMenu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- only a white rectangle-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/room_menu_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="2dp"
                app:layout_anchor="@+id/appBarLayout"
                app:layout_anchorGravity="center">

                <TextView
                    android:id="@+id/manage_room_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/manage_room_title"
                    android:textSize="20sp" />

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Body - Grid View -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvManageRoomMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>