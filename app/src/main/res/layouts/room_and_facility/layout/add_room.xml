<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff.room.Main.AddRoom">

    <!-- background -->
    <ImageView
        android:id="@+id/iv_add_room_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#F0FDFCFC"
        android:scaleType="fitXY"
        android:src="@drawable/bg2"
        tools:layout_editor_absoluteX="-38dp"
        tools:layout_editor_absoluteY="196dp" />

    <!-- the upper app bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutAddRoom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- toolbar-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/add_room_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="2dp"
                app:layout_anchor="@+id/appBarLayout"
                app:layout_anchorGravity="center">

                <!-- back icon -->

                <ImageView
                    android:id="@+id/add_room_back_icon"
                    android:layout_width="31dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_back"
                    app:tint="@color/black"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/add_room_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="@string/add_room_title"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- form -->
            <!-- white container -->
    <ImageView
        android:id="@+id/add_room_container"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="2dp"
        android:src="@drawable/white_bg_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutAddRoom" />


            <!-- upper part - img & subtitle -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/add_room_container"
                app:srcCompat="@drawable/room1" />

            <TextView
                android:id="@+id/tv_addroom_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:text="Standard Room"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/layout_room_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />


            <!-- Room No. -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_room_no"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColorHint="#808080"
                app:layout_constraintEnd_toEndOf="@+id/add_room_container"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="@+id/add_room_container"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintWidth_percent="0.7">

                <EditText
                    android:id="@+id/input_room_no"
                    android:layout_width="285dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="Room No."
                    android:inputType="textShortMessage"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="61dp"
                    tools:layout_editor_absoluteY="295dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Occupancy -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_room_occupancy"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:textColorHint="#808080"
                app:layout_constraintEnd_toEndOf="@+id/add_room_container"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="@+id/add_room_container"
                app:layout_constraintTop_toBottomOf="@+id/layout_room_no"
                app:layout_constraintWidth_percent="0.7">

                <EditText
                    android:id="@+id/input_room_occupancy"
                    android:layout_width="285dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="Occupancy"
                    android:inputType="number"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Size -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_room_size"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:textColorHint="#808080"
                app:layout_constraintEnd_toEndOf="@+id/add_room_container"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="@+id/add_room_container"
                app:layout_constraintTop_toBottomOf="@+id/layout_room_occupancy"
                app:layout_constraintWidth_percent="0.7">

                <EditText
                    android:id="@+id/input_room_size"
                    android:layout_width="285dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="Room Size"
                    android:inputType="number"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Price -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_room_price"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:textColorHint="#808080"
                app:layout_constraintEnd_toEndOf="@+id/add_room_container"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="@+id/add_room_container"
                app:layout_constraintTop_toBottomOf="@+id/layout_room_size"
                app:layout_constraintWidth_percent="0.7">

                <EditText
                    android:id="@+id/input_room_price"
                    android:layout_width="285dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Amenities -->
            <Button
                android:id="@+id/btn_add_room_amenities"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/round_button_stroke"
                android:text="Amenities"
                android:letterSpacing="0.1"
                android:textColor="@color/teal_700"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/add_room_container"
                app:layout_constraintStart_toStartOf="@+id/add_room_container"
                app:layout_constraintTop_toBottomOf="@+id/layout_room_price" />

            <!-- Image -->
            <Button
                android:id="@+id/btn_add_room_images"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/round_button_stroke"
                android:text="Image"
                android:letterSpacing="0.1"
                android:textColor="@color/teal_700"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/add_room_container"
                app:layout_constraintStart_toStartOf="@+id/add_room_container"
                app:layout_constraintTop_toBottomOf="@+id/btn_add_room_amenities" />


            <!-- Add Button -->
            <Button
                android:id="@+id/btn_add_room"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:background="@drawable/rounded_btn"
                android:text="Add"
                android:textColor="#EADBDB"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/add_room_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>