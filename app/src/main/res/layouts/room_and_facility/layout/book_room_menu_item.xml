<?xml version="1.0" encoding="utf-8"?>
<!--Card Layout for Room Menu (Staff) -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    android:id="@+id/cardManageRoomMenu"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_brm_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="8dp">

        <!-- Image Slider
        <com.custom.sliderimage.logic.SliderImage
            android:id="@+id/brm_sliderLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>-->


        <ImageView
            android:id="@+id/iv_bmr_item"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!-- Room Type -->
        <TextView
            android:id="@+id/tv_brm_item_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_bmr_item" />

        <!-- Price -->
        <TextView
            android:id="@+id/tv_brm_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_brm_item_room_type" />

        <!-- Beds -->
        <TextView
            android:id="@+id/tv_brm_item_beds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_brm_item_price" />

        <!-- Occupancy -->
        <TextView
            android:id="@+id/tv_brm_item_occupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_brm_item_beds"
            app:layout_constraintTop_toBottomOf="@+id/tv_brm_item_beds" />

        <!-- Button -->
        <Button
            android:id="@+id/btn_brm_item_book"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@color/blue_300"
            android:paddingHorizontal="40dp"
            android:text="@string/book"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_bmr_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>