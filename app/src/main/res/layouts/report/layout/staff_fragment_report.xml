<?xml version="1.0" encoding="utf-8"?>
<!-- act as a fragment - declared in staff_page_navigation.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Staff_Fragments.manager_report.ManagerReportFragment">

        <!-- Card View -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="396dp"
            android:layout_height="701dp"
            android:layout_marginBottom="84dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <!-- Card View Row 1-->

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="387dp"
                    android:layout_height="199dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.444"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.147">

                        <!-- Card View User Report -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_user_report"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@color/tomato_orange"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:contentDescription="TODO"
                                            android:src="@drawable/ic_check_in_out"
                                            app:srcCompat="@drawable/ic_manage_staff" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="      User      "
                                            android:textAlignment="center"
                                            android:textColor="@color/white" />

                                        <TextView
                                            android:id="@+id/tv_report_word1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text=" Report"
                                            android:textAlignment="center"
                                            android:textColor="@color/white" />


                                </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <!-- Card View Reservation Report -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_reservation_report"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/observatory_teal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:src="@drawable/ic_check_in_out" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Reservation"
                                            android:textAlignment="center"
                                            android:textColor="@color/white" />

                                        <TextView
                                            android:id="@+id/tv_report_word2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Report"
                                            android:textAlignment="center"
                                            android:textColor="@color/white" />


                                </LinearLayout>


                        </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="389dp"
                    android:layout_height="312dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.428"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                    app:layout_constraintVertical_bias="0.0">

                        <!-- Card View Row 1-->
                        <LinearLayout
                            android:layout_width="387dp"
                            android:layout_height="199dp"
                            android:layout_weight="1"
                            android:padding="16dp"
                            android:weightSum="2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.609"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.152">

                                <!-- Card View Housekeeping Report -->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_housekeeping_report"
                                    android:layout_width="4dp"
                                    android:layout_height="150dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="2dp">

                                        <LinearLayout
                                            android:layout_width="184dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:background="@color/royal_fuchsia"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                                <ImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="50dp"
                                                    android:contentDescription="TODO"
                                                    android:src="@drawable/ic_check_in_out"
                                                    app:srcCompat="@drawable/ic_housekeeping"
                                                    app:tint="#FFFFFF" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Housekeeping"
                                                    android:textAlignment="center"
                                                    android:textColor="@color/white" />

                                                <TextView
                                                    android:id="@+id/tv_report_word3"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Report"
                                                    android:textAlignment="center"
                                                    android:textColor="@color/white" />


                                        </LinearLayout>


                                </androidx.cardview.widget.CardView>


                        </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Card View -->
</androidx.constraintlayout.widget.ConstraintLayout>