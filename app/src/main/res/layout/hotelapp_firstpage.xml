<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/iv_firstPage_bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#F0FDFCFC"
        android:scaleType="fitXY"
        android:src="@drawable/signup_bg"
        tools:layout_editor_absoluteX="-38dp"
        tools:layout_editor_absoluteY="196dp"
        android:contentDescription="@string/backgroundImg1" />

    <ImageView
        android:id="@+id/iv_firstPage_bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BAFFFCFC"
        android:backgroundTint="#34000000"
        android:scaleType="fitXY"
        android:src="@drawable/gray_color_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-31dp"
        android:contentDescription="@string/backgroundImg2" />

    <TextView
        android:id="@+id/tv_hotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/hotel_name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <Button
        android:id="@+id/btnto_loginpage"
        android:layout_width="264dp"
        android:layout_height="47dp"
        android:layout_marginBottom="172dp"
        android:background="@color/purple_500"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/iv_firstPage_bg1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="264dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="#FDFDFD"
        android:text="@string/register"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/iv_firstPage_bg1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnto_loginpage"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>